<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_mainend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_dateend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_pillstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_pillend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_bpstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_bpend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_bsstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline_bsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <Button
        android:id="@+id/back"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/nanumsquarer"
        android:text="@string/decrease"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline1"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline3"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_statistics"
        android:fontFamily="@font/nanumsquarer"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline1"
        app:layout_constraintStart_toEndOf="@id/pm_guideline3" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rounded_corners_stroke_small"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline2"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline_dateend"
        app:layout_constraintStart_toStartOf="@id/pm_guideline_main"
        app:layout_constraintEnd_toEndOf="@id/pm_guideline_mainend"/>


    <TextView
        android:id="@+id/week_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 주 날짜"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquarer"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/pm_guideline2"
        app:layout_constraintBottom_toBottomOf="@id/pm_guideline_dateend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- 복약 세션 -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rounded_corners_small"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_pillstart"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline_pillend"
        app:layout_constraintStart_toEndOf="@id/pm_guideline_main"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline_mainend"/>

    <!-- 복약 평균을 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/pill_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주간 복약 점수: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nanumsquarer"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_pillstart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 복약 상태 표시용 TextView -->
    <TextView
        android:id="@+id/pill_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복약 상태: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/nanumsquarer"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_pillstart"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline_pillend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 최근 복약 날짜를 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/recent_medication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 복약 날짜:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/pm_guideline_pillend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- 혈당 세션 -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rounded_corners_small"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_bsstart"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline_bsend"
        app:layout_constraintStart_toEndOf="@id/pm_guideline_main"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline_mainend"/>

    <!-- 혈당 평균을 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/sugar_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주간 혈당: "
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_bsstart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 최고 혈당을 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/max_blood_sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최고 혈당: "
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sugar_avg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 혈당 상태를 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/blood_sugar_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈당 상태:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/pm_guideline_bsend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 혈압 정보 섹션 -->
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/rounded_corners_small"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_bpstart"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline_bpend"
        app:layout_constraintStart_toEndOf="@id/pm_guideline_main"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline_mainend"/>


    <!-- 혈압 평균을 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/pressure_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textColor="#000000"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline_bpstart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 최고 혈압을 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/max_blood_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최고 혈압:"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pressure_avg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 혈압 상태를 표시하는 텍스트 뷰 -->
    <TextView
        android:id="@+id/blood_pressure_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혈압 상태:"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/nanumsquarer"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/pm_guideline_bpend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>