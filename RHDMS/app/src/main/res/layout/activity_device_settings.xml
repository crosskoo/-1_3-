<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/pillbox_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="약상자 ID" />

    <!-- 첫 번째 알람 사용 여부 -->
    <Switch
        android:id="@+id/alarm_enable_1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable 1st Alarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st Alarm Start Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_start_hour_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_start_minute_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1st Alarm End Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_end_hour_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_end_minute_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <!-- 두 번째 알람 시간 설정 -->
    <Switch
        android:id="@+id/alarm_enable_2nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable 2nd Alarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Alarm Start Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_start_hour_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_start_minute_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Alarm End Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_end_hour_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_end_minute_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <!-- 세 번째 알람 시간 설정 -->
    <Switch
        android:id="@+id/alarm_enable_3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable 3rd Alarm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3rd Alarm Start Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_start_hour_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_start_minute_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3rd Alarm End Time" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alarm_end_hour_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour" />

        <Button
            android:id="@+id/alarm_end_minute_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute" />
    </LinearLayout>

    <!-- 볼륨 설정 -->
    <RadioGroup
        android:id="@+id/volume_group"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/volume_0"
            android:text="0 (Mute)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/volume_1"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/volume_2"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/volume_3"
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/volume_4"
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장" />
</LinearLayout>
