<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/week_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 주 날짜"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- 복약 정보 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <!-- 복약 평균을 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/pill_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="주간 복약 점수: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- 복약 상태 표시용 TextView -->
        <TextView
            android:id="@+id/pill_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="복약 상태: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <!-- 최근 복약 날짜를 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/recent_medication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 복약 날짜:"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>



    <!-- 혈당 정보 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp">

        <!-- 혈당 평균을 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/sugar_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="주간 혈당: "
            android:textColor="#000000"
            android:textSize="18sp" />

        <!-- 최고 혈당을 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/max_blood_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고 혈당: "
            android:textSize="18sp"
            android:textColor="#FF0000"
            android:paddingBottom="8dp" />

        <!-- 혈당 상태를 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/blood_sugar_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혈당 상태:"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- 혈압 정보 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 혈압 평균을 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/pressure_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 혈압:"
            android:textSize="18sp"
            android:textColor="#000000" />

        <!-- 최고 혈압을 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/max_blood_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최고 혈압:"
            android:textSize="18sp"
            android:textColor="#FF0000" />

        <!-- 혈압 상태를 표시하는 텍스트 뷰 -->
        <TextView
            android:id="@+id/blood_pressure_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혈압 상태:"
            android:textSize="18sp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>