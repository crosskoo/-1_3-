<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/pm_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <TextView
        android:id="@+id/pm_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_pill_management"
        android:fontFamily="@font/nanumsquarer"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline1"
        app:layout_constraintStart_toEndOf="@id/pm_guideline3" />

    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/decrease"
        android:fontFamily="@font/nanumsquarer"
        android:textSize="30sp"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline1"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline3"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--기존 이전기간 이동 버튼
    <Button
        android:id="@+id/button_decrease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#747679"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:text="@string/decrease"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline3"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline2"
        />-->

    <!-- 주간 월간 교체 버튼-->
    <ToggleButton
        android:id="@+id/toggle_pill_info"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:text=""
        android:textColor="@android:color/transparent"
        android:background="@drawable/bg_dateselect"
        android:checked="true"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/pm_guideline6"
        app:layout_constraintEnd_toStartOf="@id/pm_guideline7"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline2" />


<!--    기존 다음 기간 이동 버튼
    <Button
        android:id="@+id/button_increase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/increase"
        android:textColor="#FFFFFF"
        android:backgroundTint="#747679"
        android:textColorLink="#FFFFFF"
        android:textSize="25sp"
        android:layout_margin="0dp"
        app:layout_constraintStart_toStartOf="@id/pm_guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline2"
        />-->

    <ImageView
        android:id="@+id/pillInfo_adherence"
        android:layout_width="320dp"
        android:layout_height="157dp"
        android:src="@drawable/bg_pill_adherence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pm_guideline2"
        android:layout_marginTop="25dp"
        />

    <!-- 복약 데이터 출력-->
    <FrameLayout
        android:id="@+id/pillInfo_dataview"
        android:layout_width="320dp"
        android:layout_height="368dp"
        android:layout_marginTop="207dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pm_guideline2"
        >

        <!--제일 뒷 배경의 회색-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_pill_data"
            />

        <!--아래로는 필요한 것만 써먹을 방식 생각해야 함-->
        <!--주간 기준 위치 가이드 점선-->
        <ImageView
            android:id="@+id/foreground_image"
            android:layout_width="250dp"
            android:layout_height="299dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_pill_weekdata" />

        <!--월간 기준 위치 가이드 달력-->
        <ImageView
            android:layout_width="290dp"
            android:layout_height="299dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_pill_monthdata"
            />
    </FrameLayout>

    <!--<ImageView
        android:layout_width="320dp"
        android:layout_height="368dp"
        android:src="@drawable/bg_fill_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pm_guideline2"
        android:layout_marginTop="212dp"
        />-->

    <!--기존에 있던 프레임-->
    <FrameLayout
        android:id="@+id/pm_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/pm_guideline3"
        app:layout_constraintEnd_toEndOf="@id/pm_guideline4"
        app:layout_constraintBottom_toTopOf="@id/pm_guideline5"
        app:layout_constraintTop_toBottomOf="@id/pm_guideline2"/>



</androidx.constraintlayout.widget.ConstraintLayout>