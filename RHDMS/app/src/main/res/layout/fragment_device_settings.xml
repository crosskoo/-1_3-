<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 복약기 ID -->
    <FrameLayout
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/deviceid_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_id"/>

        <TextView
            android:id="@+id/pillbox_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarer"
            android:text="복약기 ID"
            android:textSize="11dp"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/pillbox_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:hint="약상자 ID"
            android:textSize="15dp"/>

    </FrameLayout>

    <!-- 알람 설정 -->
    <!-- 알람 사용 설정-->

    <FrameLayout
        android:layout_weight="0.25"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/device_setting_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_device_count"
            app:layout_constraintTop_toBottomOf="@+id/deviceid_bg"
            />

        <EditText
            android:layout_marginTop="5dp"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:id="@+id/settingnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="입력"
            android:textSize="14dp" />


        <!-- 볼륨 설정 -->
        <!-- 체크할 수 있는 원형의 간격을 조금만 더 숫자랑 가까이 붙일 수 있는지-->
        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:id="@+id/volume_group"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/volume_0"
                android:text="0"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/volume_1"
                android:text="1"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/volume_2"
                android:text="2"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/volume_3"
                android:text="3"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/volume_4"
                android:text="4"
                android:textSize="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
    </FrameLayout>

    <!-- 첫 알람 시간 세팅 -->

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/alarm_setting_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_device_alarm2"/>

        <LinearLayout
            android:layout_marginTop="95dp"
            android:layout_marginStart="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/alarm_start_hour_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="시"
                android:textSize="32dp"
                android:background="@color/white"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/nanumsquareb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/pm_guideline_time" />

            <EditText
                android:id="@+id/alarm_start_minute_1st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="분"
                android:textSize="32dp"
                android:background="@color/white"
                android:gravity="left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/nanumsquareb" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알람 ①"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

            <TextView
                android:gravity="start"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="시작 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

            <TextView
                android:gravity="start"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="지속 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <EditText
            android:layout_gravity="end"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="125dp"
            android:id="@+id/alarm1_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="M"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:gravity="right"
            android:background="@android:color/transparent" />

    </FrameLayout>

    <!-- 두번째 알람 시간 세팅 -->

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/alarm_setting_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_device_alarm2"
            />

        <LinearLayout
            android:layout_marginTop="95dp"
            android:layout_marginStart="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/alarm_start_hour_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="시"
                android:textSize="32dp"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:fontFamily="@font/nanumsquareb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/alarm_start_minute_2nd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="분"
                android:textSize="32dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:fontFamily="@font/nanumsquareb"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알람 ②"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="시작 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="지속 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

        </LinearLayout>


        <EditText
            android:layout_gravity="end"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="125dp"
            android:id="@+id/alarm2_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="M"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:background="@android:color/transparent" />

    </FrameLayout>

    <!-- 세번째 알람 시간 세팅 -->

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/alarm_setting_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_device_alarm2" />

        <LinearLayout
            android:layout_marginTop="95dp"
            android:layout_marginStart="110dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/alarm_start_hour_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="시"
                android:textSize="32dp"
                android:background="@color/white"
                android:fontFamily="@font/nanumsquareb"
                android:gravity="right"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="32dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/alarm_start_minute_3rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="분"
                android:textSize="32dp"
                android:background="@color/white"
                android:fontFamily="@font/nanumsquareb"
                android:gravity="left"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="알람 ③"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="시작 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="지속 시간"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>


        <EditText
            android:layout_gravity="end"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="125dp"
            android:id="@+id/alarm3_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="M"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:background="@android:color/transparent" />

    </FrameLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 설정초기화 버튼 -->
            <Button
                android:id="@+id/SettingReset_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:gravity="center"
                android:text="설정 초기화"
                android:textSize="14dp"/>

            <!-- 공장초기화 버튼 -->
            <Button
                android:id="@+id/DeviceRest_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquareb"
                android:gravity="center"
                android:text="공장 초기화"
                android:textSize="14dp"/>
        </LinearLayout>

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareb"
            android:gravity="center"
            android:text="저장"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>